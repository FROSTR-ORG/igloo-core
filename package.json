{
    "name": "@frostr/igloo-core",
    "version": "0.2.0",
    "description": "Core library for FROSTR's IGLOO client functionality - secure distributed key management and remote signing",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "clean": "rm -rf dist",
        "demo": "npm run build && node examples/demo.js",
        "examples": "npm run build && node --loader ts-node/esm examples/example-usage.ts",
        "validate-example": "npm run build && node --loader ts-node/esm examples/validation-example.ts",
        "prepublishOnly": "npm run clean && npm run build && npm test"
    },
    "keywords": [
        "frost",
        "bifrost",
        "frostr",
        "nostr",
        "threshold-signatures",
        "key-management",
        "distributed-signing"
    ],
    "author": {
        "name": "austinkelsay",
        "email": "austinkelsay@protonmail.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FROSTR-ORG/igloo-core.git"
    },
    "homepage": "https://github.com/FROSTR-ORG/igloo-core#readme",
    "bugs": {
        "url": "https://github.com/FROSTR-ORG/igloo-core/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "@frostr/bifrost": "^1.0.6",
        "nostr-tools": "^2.10.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "zod": "^3.24.2"
    }
}
